<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <context-param>
        <description>Сервер, на котором работает сервер приложения.</description>
        <param-name>serverHost</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <description>Порт, на котором работает сервер приложения.</description>
        <param-name>serverPort</param-name>
        <param-value>7652</param-value>
    </context-param>

    <servlet>
        <servlet-name>ProjectsService</servlet-name>
        <servlet-class>skolkovo.gwt.expert.server.ExpertServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExpertProfileService</servlet-name>
        <servlet-class>skolkovo.gwt.expertprofile.server.ExpertProfileServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginService</servlet-name>
        <servlet-class>skolkovo.gwt.login.server.LoginServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProjectsService</servlet-name>
        <url-pattern>/skolkovo.gwt.expert.Expert/ProjectsService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExpertProfileService</servlet-name>
        <url-pattern>/skolkovo.gwt.expertprofile.ExpertProfile/ExpertProfileService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginService</servlet-name>
        <url-pattern>/skolkovo.gwt.login.Login/LoginService</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoteFormService</servlet-name>
        <servlet-class>platform.gwt.form.server.RemoteFormServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RemoteFormService</servlet-name>
        <url-pattern>/skolkovo.gwt.form.Form/dispatch</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <!-- Spring security configuration -->
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/log4j.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/spring/applicationContext-security.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
