MODULE Com;

REQUIRE System;

//file, baudrate, com-port, daemon
writeToComPort '{com.write.to.com.port}'  INTERNAL  'lsfusion.utils.com.WriteToComPortActionProperty' (FILE, INTEGER, INTEGER, BOOLEAN);
writeToComPort '{com.write.to.com.port}' (FILE file, INTEGER baudrate, INTEGER comPort)  { writeToComPort(file, baudrate, comPort, NULL); }
writeToComPortDaemon '{com.write.to.com.port.daemon}' (FILE file, INTEGER baudrate, INTEGER comPort)  { writeToComPort(file, baudrate, comPort, TRUE); }