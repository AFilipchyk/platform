<assembly>
  <id>prod</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <!-->из-за того что в commons-beanutils по ошибке включены commons-collections<-->
      <excludes>
          <exclude>commons-beanutils:commons-beanutils</exclude>
          <exclude>org.bouncycastle:bcmail-jdk14</exclude>
          <exclude>org.bouncycastle:bcprov-jdk14</exclude>
          <exclude>xml-apis:xml-apis</exclude>
          <exclude>xalan:xalan</exclude>
      </excludes>
      <unpack>true</unpack>
      <unpackOptions>
          <excludes>
              <exclude>META-INF/**</exclude>
              <exclude>license/**</exclude> <!-- какие то идиоты включили каталог license в jarку -->
              <exclude>builddef.lst</exclude> <!-- он появляется и при сборке client.jar, пока исключу, хотя потом надо разобраться нафига он вообще формируется -->
          </excludes>
      </unpackOptions>
    </dependencySet>
    <dependencySet>
       <includes>
           <include>commons-beanutils:commons-beanutils</include>
       </includes>
       <unpack>true</unpack>
       <unpackOptions>
           <excludes>
               <exclude>org/apache/commons/collections/**</exclude>
               <exclude>META-INF/**</exclude>
           </excludes>
       </unpackOptions>
    </dependencySet>
      <dependencySet>
         <includes>
             <include>xalan:xalan</include>
         </includes>
         <unpack>true</unpack>
         <unpackOptions>
             <excludes>
                 <exclude>org/w3c/dom/**</exclude>
                 <exclude>META-INF/**</exclude>
                 <exclude>license/**</exclude>
             </excludes>
         </unpackOptions>
      </dependencySet>
      <dependencySet>
         <includes>
             <include>xml-apis:xml-apis</include> <!-- есть также и в batik-ext -->
         </includes>
         <unpack>true</unpack>
         <unpackOptions>
             <excludes>
                 <exclude>org/w3c/dom/events/DocumentEvent.class</exclude>
                 <exclude>org/w3c/dom/events/Event.class</exclude>
                 <exclude>org/w3c/dom/events/EventException.class</exclude>
                 <exclude>org/w3c/dom/events/EventListener.class</exclude>
                 <exclude>org/w3c/dom/events/EventTarget.class</exclude>
                 <exclude>org/w3c/dom/events/MouseEvent.class</exclude>
                 <exclude>org/w3c/dom/events/MutationEvent.class</exclude>
                 <exclude>org/w3c/dom/events/UIEvent.class</exclude>
                 <exclude>META-INF/**</exclude>
                 <exclude>license/**</exclude>
             </excludes>
         </unpackOptions>
      </dependencySet>
  </dependencySets>
</assembly>