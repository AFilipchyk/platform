<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
    default-lazy-init="true">

    <bean id="dataAdapter" class="platform.server.data.sql.PostgreDataAdapter">
        <constructor-arg value="paas"/>
        <constructor-arg value="localhost"/>
        <constructor-arg value="postgres"/>
        <constructor-arg value="11111"/>
    </bean>

    <bean id="businessLogics" class="paas.PaasBusinessLogics">
        <constructor-arg ref="dataAdapter"/>
        <constructor-arg type="int" value="7652"/>
    </bean>

    <bean id="appManager" class="paas.manager.server.AppManager">
        <constructor-arg value="7667"/>
    </bean>

    <bean id="lifecycleManager" class="platform.server.lifecycle.LifecycleManager">
        <constructor-arg>
            <bean class="paas.manager.server.AppManagerLifecycleListener">
                <constructor-arg ref="appManager"/>
            </bean>
        </constructor-arg>
    </bean>
</beans>