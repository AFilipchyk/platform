<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>navigator.jsp</welcome-file>
    </welcome-file-list>

    <context-param>
        <description>Сервер, на котором работает сервер приложения.</description>
        <param-name>serverHost</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <description>Порт, на котором работает сервер приложения.</description>
        <param-name>serverPort</param-name>
        <param-value>7652</param-value>
    </context-param>

    <servlet>
        <servlet-name>ExpertService</servlet-name>
        <servlet-class>skolkovo.gwt.expert.server.ExpertServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExpertService</servlet-name>
        <url-pattern>/skolkovo.gwt.expert.Expert/dispatch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExpertProfileService</servlet-name>
        <servlet-class>skolkovo.gwt.expertprofile.server.ExpertProfileServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExpertProfileService</servlet-name>
        <url-pattern>/skolkovo.gwt.expertprofile.ExpertProfile/dispatch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClaimerService</servlet-name>
        <servlet-class>skolkovo.gwt.claimer.server.ClaimerServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClaimerService</servlet-name>
        <url-pattern>/skolkovo.gwt.claimer.Claimer/dispatch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginService</servlet-name>
        <servlet-class>platform.gwt.login.server.LoginServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginService</servlet-name>
        <url-pattern>/skolkovo.gwt.login.Login/dispatch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoteFormService</servlet-name>
        <servlet-class>platform.gwt.form.server.RemoteFormServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoteFormService</servlet-name>
        <url-pattern>/skolkovo.gwt.form.Form/dispatch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NavigatorService</servlet-name>
        <servlet-class>platform.gwt.navigator.server.NavigatorServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NavigatorService</servlet-name>
        <url-pattern>/skolkovo.gwt.navigator.Navigator/dispatch</url-pattern>
    </servlet-mapping>

