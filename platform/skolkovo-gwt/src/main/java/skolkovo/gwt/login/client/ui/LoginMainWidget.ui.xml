<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:sk='urn:import:skolkovo.gwt.base.client.ui'>
    <ui:style src="LoginMainWidget.ui.css" type="skolkovo.gwt.login.client.ui.LoginMainWidget.Styles"/>
    <g:VerticalPanel width="100%">
        <g:cell horizontalAlignment="center">
            <g:VerticalPanel width="800" styleName="{style.mainPane}" spacing="5">
                <sk:ToolbarPanel showProfileButton="false" />

                <g:HTMLPanel>
                    <g:Image styleName="{style.floatRight}" url="images/logo.png" altText="Logo"/>
                    <hr size="5" color="#000000"/>
                    <center><h2><span ui:field="titleSpan"/></h2></center>

                    <g:VerticalPanel height="15" width="100%" />

                    <g:FormPanel ui:field="loginForm" method="POST" action="j_security_check">
                        <g:VerticalPanel>
                            <g:HTMLPanel>
                                <table>
                                    <tr>
                                        <td colspan="2"><g:Label ui:field="errorLabel" styleName="{style.error}"></g:Label></td>
                                    </tr>
                                    <tr>
                                        <td><g:Label ui:field="lbUsername" /></td>
                                        <td><g:TextBox ui:field="tbUsername" name="j_username"/></td>
                                    </tr>
                                    <tr>
                                        <td><g:Label ui:field="lbPassword" /></td>
                                        <td><g:PasswordTextBox ui:field="tbPassword" name="j_password"/></td>
                                    </tr>
                                </table>
                            </g:HTMLPanel>
                            <g:HorizontalPanel spacing="5">
                                <g:Button ui:field="btnLogin" />
                                <g:Button ui:field="btnForget" />
                            </g:HorizontalPanel>
                        </g:VerticalPanel>
                    </g:FormPanel>
                    <g:VerticalPanel ui:field="remindPanel" visible="false">
                        <g:HTMLPanel>
                            <table>
                                <tr>
                                    <td><g:Label ui:field="lbEmailPrompt" /></td>
                                </tr>
                                <tr>
                                    <td><g:TextBox ui:field="tbEmail"/></td>
                                </tr>
                                <tr>
                                    <td><g:Button ui:field="btnRemind"/></td>
                                </tr>
                            </table>
                        </g:HTMLPanel>
                    </g:VerticalPanel>
                </g:HTMLPanel>
            </g:VerticalPanel>
        </g:cell>
    </g:VerticalPanel>
</ui:UiBinder>