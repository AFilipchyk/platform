<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="true">

    <bean id="dataAdapter" class="platform.server.data.sql.PostgreDataAdapter">
        <constructor-arg value="#{systemProperties['platform.server.logics.dbname'] ?: 'scripted_logics_test4'}"/>
        <constructor-arg value="localhost"/>
        <constructor-arg value="postgres"/>
        <constructor-arg value="11111"/>
    </bean>

    <bean id="businessLogics" class="platform.server.logics.scripted.ScriptingBusinessLogics">
        <constructor-arg index="0" value="scriptedLogics"/>
        <constructor-arg index="1" ref="dataAdapter"/>
        <constructor-arg index="2" value="7652"/>
        <constructor-arg index="3" value="src/main/resources/scripts/I18n.lsf;src/main/resources/samples/FeaturesScript.lsf;src/main/resources/scripts/utils/Utils.lsf;src/main/resources/scripts/masterdata/Country.lsf;src/main/resources/scripts/masterdata/Currency.lsf;src/main/resources/scripts/utils/DefaultData.lsf"/>
    </bean>
</beans>
