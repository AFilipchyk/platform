META defineHistorizableDoubleCustom(property, caption, type, typeIdentity, object1, object1Identity, object2, object2Identity, fixedCharWidth, group)
    @defineHistorizableDoubleHeader(property, caption, type, typeIdentity, object1, object2, fixedCharWidth, group);
    property##Date caption (object1, object2, date) = data###property##Date(object1, object2, date###property##Date(object1, object2, date));
    @defineHistorizableDoubleFooter(property, caption, typeIdentity, object1, object1Identity, object2, object2Identity, fixedCharWidth, group);
END

META defineHistorizableDoubleDefaultCustom(property, defaultProperty, caption, type, typeIdentity, object1, object1Identity, object2, object2Identity, fixedCharWidth, group)
    @defineHistorizableDoubleHeader(property, caption, type, typeIdentity, object1, object2, fixedCharWidth, group);
    property##Date caption (object1, object2, date) = (defaultProperty(object1, object2) AND date IS DATE) OR data###property##Date(object1, object2, date###property##Date(object1, object2, date));
    @defineHistorizableDoubleFooter(property, caption, typeIdentity, object1, object1Identity, object2, object2Identity, fixedCharWidth, group);
END

