MODULE PurchaseReturnOrder;

REQUIRE Order, PurchaseShipment;

NAMESPACE PurchaseReturn;

@defineOrder(' (покупка-возврат)', customerStock);

@defineNumeratedObjectDefaultPrefix(userOrder, 'Нумератор для заказов (покупка-возврат)', 'ВЗ', purchaseReturn);

CONSTRAINT supplierUserOrder(userOrder) AND NOT isSupplierLegalEntity(supplierUserOrder(userOrder))
    CHECKED BY supplierUserOrder MESSAGE 'Для заказа выбрано в качестве поставщика юр.лицо, не являющееся поставщиком';
CONSTRAINT customerUserOrder(userOrder) AND NOT isCompanyLegalEntity(customerUserOrder(userOrder))
    CHECKED BY customerUserOrder MESSAGE 'Для заказа выбрано в качестве покупателя юр.лицо, не являющееся компанией';