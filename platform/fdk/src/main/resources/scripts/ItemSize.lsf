MODULE ItemSize;

REQUIRE System, Item;

NAMESPACE Item;

// Размеры
@defineDoubleItemAttribute(length, NUMERIC[8,2], 'Длина', itemSizeGroup);
@defineDoubleItemAttribute(width, NUMERIC[8,2], 'Ширина', itemSizeGroup);
@defineDoubleItemAttribute(height, NUMERIC[8,2], 'Высота', itemSizeGroup);

// Объем
@defineDoubleItemAttribute(volume, NUMERIC[9,3], 'Объем', itemSizeGroup);
volumeSku(sku) += volumeItem(sku);