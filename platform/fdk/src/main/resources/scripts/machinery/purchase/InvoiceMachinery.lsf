MODULE InvoiceMachinery;

REQUIRE Machinery, LabelPricing, PurchaseInvoice, PricingPurchase;

NAMESPACE Purchase;

//-- Ценники
statusLabelPriceTransactionDocumentInvoice 'Статус печати ценника' (invoice) = statusLabelPriceTransactionDocument(invoicePricingInvoice(invoice));
createPricingLabelTransactionInvoice 'Печать ценников' (invoice) = createPricingLabelTransaction(invoicePricingInvoice(invoice)) TOOLBAR CONFIRM;
createSnapshotPricingLabelTransactionInvoice 'Перепечатать ценников' (invoice) = createSnapshotPricingLabelTransaction(invoicePricingInvoice(invoice)) CONFIRM;
showPrintLabelTransactionInvoice 'Показывать' (invoice) = showPrintLabelTransactionPricing(invoicePricingInvoice(invoice));
backgroundPrintLabelTransactionInvoice 'Цвет' (invoice) = backgroundPrintLabelTransactionPricing(invoicePricingInvoice(invoice));
//-- Загрузка
statusMachineryPriceTransactionDocumentInvoice 'Статус загрузки в оборудование' (invoice) = statusMachineryPriceTransactionDocument(invoicePricingInvoice(invoice));
createPricingMachineryPriceTransactionInvoice 'Загрузить в оборудование' (invoice) = createPricingMachineryPriceTransaction(invoicePricingInvoice(invoice)) TOOLBAR CONFIRM;
createSnapshotPricingMachineryPriceTransactionInvoice 'Перегрузить все позиции' (invoice) = createSnapshotPricingMachineryPriceTransaction(invoicePricingInvoice(invoice)) CONFIRM;
showCreateMachineryPriceTransactionInvoice 'Показывать' (invoice) = showCreateMachineryPriceTransactionPricing(invoicePricingInvoice(invoice));
backgroundCreateMachineryPriceTransactionInvoice 'Цвет' (invoice) = backgroundCreateMachineryPriceTransactionPricing(invoicePricingInvoice(invoice));

EXTEND FORM invoices
    PROPERTIES(i) statusMachineryPriceTransactionDocumentInvoice ON SHORTCUT createSnapshotPricingMachineryPriceTransactionInvoice(i) BACKGROUND backgroundCreateMachineryPriceTransactionInvoice(i) READONLY AFTER isCommissionInvoice,
                       createPricingMachineryPriceTransactionInvoice FORCE PANEL SHOWIF showCreateMachineryPriceTransactionInvoice(i)
    PROPERTIES(i) statusLabelPriceTransactionDocumentInvoice ON SHORTCUT createSnapshotPricingLabelTransactionInvoice(i) BACKGROUND backgroundPrintLabelTransactionInvoice(i) READONLY AFTER isCommissionInvoice,
                       createPricingLabelTransactionInvoice FORCE PANEL SHOWIF showPrintLabelTransactionInvoice(i)
;