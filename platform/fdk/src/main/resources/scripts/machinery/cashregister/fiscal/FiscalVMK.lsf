MODULE FiscalVMK;

REQUIRE System,
        POS;

fiscalVMKPrintReceipt 'Напечатать фискальный чек' = ACTION CUSTOM 'platform.fdk.actions.fiscalvmk.FiscalVMKPrintReceiptActionProperty';
postPrintReceipt(receipt) += fiscalVMKPrintReceipt(receipt) IF sidCashRegisterModelReceipt(receipt) == 'VMK';

fiscalVMKAdvancePaper 'Прогон ленты' = ACTION CUSTOM 'platform.fdk.actions.fiscalvmk.FiscalVMKAdvancePaperActionProperty';
fiscalAdvancePaper() += fiscalVMKAdvancePaper() IF sidModelCurrentCashRegister() == 'VMK';

fiscalVMKXReport 'X-отчёт' = ACTION CUSTOM 'platform.fdk.actions.fiscalvmk.FiscalVMKXReportActionProperty';
fiscalXReport() += fiscalVMKXReport() IF sidModelCurrentCashRegister() == 'VMK';

fiscalVMKZReport 'Z-отчёт' = ACTION CUSTOM 'platform.fdk.actions.fiscalvmk.FiscalVMKZReportActionProperty';
fiscalZReport() += fiscalVMKZReport() IF sidModelCurrentCashRegister() == 'VMK';

fiscalVMKUpdateData 'Загрузить информацию' = ACTION CUSTOM 'platform.fdk.actions.fiscalvmk.FiscalVMKUpdateDataActionProperty';
fiscalUpdateData() += fiscalVMKUpdateData() IF sidModelCurrentCashRegister() == 'VMK';

fiscalVMKServiceCashOperation 'Перемещение денег' = ACTION CUSTOM 'platform.fdk.actions.fiscalvmk.FiscalVMKServiceInOutActionProperty';
fiscalServiceCashOperation(cashOperation) += fiscalVMKServiceCashOperation(cashOperation) IF sidCashRegisterModelCashOperation(cashOperation) == 'VMK';

fiscalVMKDisplayTextReceiptDetail 'Вывести текст на дисплей' = ACTION CUSTOM 'platform.fdk.actions.fiscalvmk.FiscalVMKDisplayTextActionProperty';
fiscalDisplayTextReceiptDetail (receiptDetail) += fiscalVMKDisplayTextReceiptDetail(receiptDetail) IF sidCashRegisterModelReceiptDetail(receiptDetail) == 'VMK';

fiscalVMKCancelReceipt 'Отменить чек' = ACTION CUSTOM 'platform.fdk.actions.fiscalvmk.FiscalVMKCancelReceiptActionProperty';
fiscalCancelReceipt() += fiscalVMKCancelReceipt() IF sidModelCurrentCashRegister() == 'VMK';