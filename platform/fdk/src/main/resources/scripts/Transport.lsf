MODULE Transport;

REQUIRE System,
        Utils,
        LegalEntity,
        Stock;

CLASS truck 'Машина';

sidTruck 'Номер' = DATA STRING[20](truck);
markTruck 'Марка' = DATA STRING[100](truck);
weightTruck 'Грузоподьёмность (тонн)' = DATA NUMERIC[14,2](truck);

FORM truck 'Машина'
    OBJECTS t=truck FIXED PANEL
    PROPERTIES (t) sidTruck, markTruck, weightTruck

    EDIT truck OBJECT t
;

FORM trucks 'Машины'
    OBJECTS t=truck
    PROPERTIES(t) READONLY sidTruck, markTruck, weightTruck
    PROPERTIES(t) ADDFORM, EDITFORM, delete FORCE PANEL DRAWTOTOOLBAR

    DIALOG truck OBJECT t
;

