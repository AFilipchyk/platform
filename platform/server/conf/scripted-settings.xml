<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
    default-lazy-init="true">

    <bean id="dataAdapter" class="platform.server.data.sql.PostgreDataAdapter">
        <constructor-arg value="scripted_logics_test"/>
        <constructor-arg value="localhost"/>
        <constructor-arg value="postgres"/>
        <constructor-arg value="11111"/>
    </bean>

    <bean id="businessLogics" class="platform.server.logics.scripted.ScriptedBusinessLogics">
        <constructor-arg index="0" value="scriptedLogics" />
        <constructor-arg index="1" ref="dataAdapter" />
        <constructor-arg index="2" value="1234" />
        <constructor-arg index="3" value="SampleFeatures"/>
        <constructor-arg index="4" value="src\main\java\platform\server\FeaturesScript.lsf"/>
    </bean>
</beans>