                fillVertical = 5;
                NEW pop1 {
                    childConstraints = TO THE RIGHT;
                    ADD cs.grid.box  {
                        fillVertical = 1;
                        fillHorizontal = 4;
                    }
                    ADD cs.panel {
                        title = 'Суммы товар/тара';
                        childConstraints = TO THE BOTTOM;
                        fillHorizontal = 1;
                    }
