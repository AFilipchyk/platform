fillMachineryModelDefaultValues 'Заполнить значения моделей оборудования по умолчанию' = ACTION () {
    EXEC fillCashRegisterModelDefaultValues();
    EXEC fillScalesModelDefaultValues();
    EXEC fillPriceCheckerModelDefaultValues();
    EXEC fillTerminalModelDefaultValues();
}

addedNumerator = SESSION DATA numerator();

addNumerator 'Добавить нумератор' = ACTION(string1, string2, long1, long2, int) {
    ADDOBJ numerator;
    FOR n == addedObject() DO {
        SET name(n) <- string1 AS STRING[110];
        SET seriesNumerator(n) <- string2 AS STRING[2];
        SET minValueNumerator(n) <-long1 AS LONG;
        SET maxValueNumerator(n) <-long2 AS LONG;
        SET stringLengthNumerator(n) <-int AS INTEGER;
        SET addedNumerator() <- n AS numerator;
    }
}

fillNumeratorDefaultValues 'Заполнить значения нумераторов по умолчанию' = ACTION() {
    EXEC addNumerator('Документы', 'AA', 1, 10000, 4);
    SET defaultNumeratorDocuments() <- addedNumerator();
    EXEC addNumerator('Заказы', 'AA', 1, 10000, 4);
    SET defaultNumeratorOrders() <- addedNumerator();
    EXEC addNumerator('Дисконтные карты', 'AA', 1, 10000, 4);
    SET defaultNumeratorDiscountCards() <- addedNumerator();
    EXEC addNumerator('Инкассации', 'AA', 1, 10000, 4);
    SET defaultNumeratorCollection() <- addedNumerator();
}

fillDatabaseDefaultValues 'Заполнить базу значениями по умолчанию' = ACTION() {
    EXEC fillVATDefaultValues();
