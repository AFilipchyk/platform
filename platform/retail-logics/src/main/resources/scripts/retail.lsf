//---------------------------------------------- Заполнение БД -------------------------------------------------//

FORM fillDataBase 'Заполнение БД'

    PROPERTIES()    fillVATDefaultValues, fillCountryDefaultValues, fillUOMDefaultValues, fillCurrencyDefaultValues,
                    fillStatisticGroupDefaultValues, fillLossItemGroupDefaultValues, fillMachineryModelDefaultValues,
                    fillDocumentTypeDefaultValues, fillLabelTypeDefaultValues, fillPaymentTypeDefaultValues,
                    fillNumeratorDefaultValues, fillDatabaseDefaultValues

    OBJECTS         es=equipmentServer FIXED PANEL
    PROPERTIES(es)  SELECTOR name

    OBJECTS         s=stock FIXED PANEL
    PROPERTIES(s)   SELECTOR name

    OBJECTS         gtdt=groupTerminalDocumentType FIXED PANEL
    PROPERTIES(gtdt)   SELECTOR nameGroupTerminalDocumentType

    OBJECTS         crm=cashRegisterModel FIXED PANEL
    PROPERTIES(crm) SELECTOR name

    OBJECTS         sm=scalesModel FIXED PANEL
    PROPERTIES(sm)  SELECTOR name

    OBJECTS         tm=terminalModel FIXED PANEL
    PROPERTIES(tm)  SELECTOR name

    OBJECTS         cCashReg=INTEGER FIXED PANEL
    PROPERTIES(cCashReg)   intValueCashRegister = OBJVALUE

    OBJECTS         cScales=INTEGER FIXED PANEL
    PROPERTIES(cScales)   intValueScales = OBJVALUE

    OBJECTS         cPriceChecker=INTEGER FIXED PANEL
    PROPERTIES(cPriceChecker)   intValuePriceChecker = OBJVALUE

    OBJECTS         cTerminal=INTEGER FIXED PANEL
    PROPERTIES(cTerminal)   intValueTerminal = OBJVALUE

    PROPERTIES (es, s, crm, cCashReg) fillCashRegisterDefaultValues
    PROPERTIES (es, s, sm, cScales)  fillScalesDefaultValues
    PROPERTIES (es, s, cPriceChecker)  fillPriceCheckerDefaultValues
    PROPERTIES (es, s, tm, gtdt, cTerminal)  fillTerminalDefaultValues

    PROPERTIES()    generateZReport, averageZReportCountGenerateZReport, averageBillCountGenerateZReport, averageBillDetailCountGenerateZReport,
                    dateFromGenerateZReport, dateToGenerateZReport
;

DESIGN fillDataBase FROM DEFAULT {
    main{
        PROPERTY(intValueCashRegister) {
            caption = 'Количество касс';
        }
        PROPERTY(intValueScales) {
            caption = 'Количество весов';
        }
        PROPERTY(intValuePriceChecker) {
            caption = 'Количество прайс-чекеров';
        }
        PROPERTY(intValueTerminal) {
            caption = 'Количество ТСД';
        }
        PROPERTY(name(es)) {
            caption = 'Сервер оборудования';
        }
        PROPERTY(name(s)) {
            caption = 'Склад';
        }
        PROPERTY(name(crm)) {
            caption = 'Модель касс';
        }
        PROPERTY(name(sm)) {
            caption = 'Модель весов';
        }
        PROPERTY(name(tm)) {
            caption = 'Модель ТСД';
        }
        PROPERTY(nameGroupTerminalDocumentType(gtdt)) {
            caption = 'Группа типов документов';
        }

        NEW mainContainer BEFORE functions.box {
            title = 'Заполнение БД';
            childConstraints = TO THE BOTTOM;
            ADD PROPERTY(fillVATDefaultValues());
            ADD PROPERTY(fillCountryDefaultValues());
            ADD PROPERTY(fillUOMDefaultValues());
            ADD PROPERTY(fillCurrencyDefaultValues());
            ADD PROPERTY(fillStatisticGroupDefaultValues());
            ADD PROPERTY(fillLossItemGroupDefaultValues());
            ADD PROPERTY(fillLabelTypeDefaultValues());
            ADD PROPERTY(fillPaymentTypeDefaultValues());
            ADD PROPERTY(fillNumeratorDefaultValues());
            ADD PROPERTY(fillDatabaseDefaultValues());

            NEW containerFillMachinery {
                title = 'Заполнение оборудования по умолчанию';
                childConstraints = TO THE BOTTOM;
                ADD PROPERTY(fillMachineryModelDefaultValues());
                ADD PROPERTY(name(es));
                ADD PROPERTY(name(s));

                NEW containerCashRegister {
                    title = 'Кассы';
                    ADD PROPERTY(name(crm));
                    ADD PROPERTY(intValueCashRegister);
                    ADD PROPERTY(fillCashRegisterDefaultValues);
                }
                NEW containerScales {
                    title = 'Весы';
                    ADD PROPERTY(name(sm));
                    ADD PROPERTY(intValueScales);
                    ADD PROPERTY(fillScalesDefaultValues);
                }
                NEW containerPriceChecker {
                    childConstraints = TO THE BOTTOM;
                    title = 'Прайс-чекеры';
                    ADD PROPERTY(intValuePriceChecker);
                    ADD PROPERTY(fillPriceCheckerDefaultValues);
                }
                NEW containerTerminal {
                    title = 'ТСД';
                    ADD PROPERTY(fillDocumentTypeDefaultValues);
                    ADD PROPERTY(nameGroupTerminalDocumentType(gtdt));
                    ADD PROPERTY(name(tm));
                    ADD PROPERTY(intValueTerminal);
                    ADD PROPERTY(fillTerminalDefaultValues);
                }
            }

            NEW containerZReport {
                title = 'Сгенерировать Z-отчёт';
                childConstraints = TO THE BOTTOM;
                ADD PROPERTY(averageZReportCountGenerateZReport());
                ADD PROPERTY(averageBillCountGenerateZReport());
                ADD PROPERTY(averageBillDetailCountGenerateZReport());
                ADD PROPERTY(dateFromGenerateZReport());
                ADD PROPERTY(dateToGenerateZReport());
                ADD PROPERTY(generateZReport());
            }
        }
    }
}
