//-------------------------------Справочник валют---------------------//

addCurrencyString 'Добавить валюты' = ACTION (stringOne, stringTwo, stringThree) {
    ADDOBJ currency;
    FOR c == addedObject() DO {
       SET shortNameCurrency(c) <-  stringOne AS STRING[3];
       SET name(c) <-  stringTwo AS STRING[110];
       SET symbolCurrency(c) <- stringThree AS STRING[5];
    }
}

