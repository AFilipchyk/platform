                childConstraints = TO THE BOTTOM;
                ADD PROPERTY(nameAttributeItem);
                ADD PROPERTY(nameCashAttributeItem);
                ADD PROPERTY(nameScalesAttributeItem);
            }
            NEW itemPanelColumn2 {
