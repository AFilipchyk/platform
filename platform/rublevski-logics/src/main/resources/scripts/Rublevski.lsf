priceDetailPage(detailPage) <- priceAccountLedgerDateTime(
                skuBarcodeDetailPage(detailPage), departmentStoreDetailPage(detailPage), dateTimeToInventory(inventoryDetailPage(detailPage)))
                ON CHANGE skuBarcodeDetailPage(detailPage);

priceCollationSheetItem(collationSheet, item) <- priceAccountLedgerDateTime(
                item, departmentStoreCollationSheet(collationSheet), dateTimeToInventory(inventoryCollationSheet(collationSheet)))
                ON ASSIGN includeCollationSheetItem(collationSheet, item);

//priceAccountLedgerDateTimeDetailPage (detailPage) = priceAccountLedgerDateTime(skuBarcodeDetailPage(detailPage), departmentStoreDetailPage(detailPage), dateTimeToInventory(inventoryDetailPage(detailPage)));
//priceAccountLedgerDateTimeItemCollationSheet(item, collationSheet) = priceAccountLedgerDateTime(item, departmentStoreCollationSheet(collationSheet), dateTimeToInventory(inventoryCollationSheet(collationSheet)));


convertPriceInventory 'Пересчитать цены по всей инвентаризации' (inventory) = ACTION(inventory) {
    SET priceDetailPage(detailPage) AND inventoryDetailPage(detailPage) == inventory <- priceAccountLedgerDateTime(
            skuBarcodeDetailPage(detailPage), departmentStoreDetailPage(detailPage), dateTimeToInventory(inventoryDetailPage(detailPage)))
            AND inventoryDetailPage(detailPage) == inventory;
    SET priceCollationSheetItem(collationSheet, item) AND inventoryCollationSheet(collationSheet) == inventory <- priceAccountLedgerDateTime(
            item, departmentStoreCollationSheet(collationSheet), dateTimeToInventory(inventoryCollationSheet(collationSheet)))
            AND inventoryCollationSheet(collationSheet) == inventory;
} CONFIRM;

convertPriceCollationSheet 'Пересчитать цены в сличительной ведомости' (collationSheet) = ACTION(collationSheet) {
    SET priceDetailPage(detailPage) AND collationSheetListInventory(listInventoryDetailPage(detailPage)) == collationSheet <- priceAccountLedgerDateTime(
            skuBarcodeDetailPage(detailPage), departmentStoreDetailPage(detailPage), dateTimeToInventory(inventoryDetailPage(detailPage)))
            AND collationSheetListInventory(listInventoryDetailPage(detailPage)) == collationSheet;
    SET priceCollationSheetItem(collationSheet, item) <- priceAccountLedgerDateTime(
            item, departmentStoreCollationSheet(collationSheet), dateTimeToInventory(inventoryCollationSheet(collationSheet)));
} CONFIRM;



