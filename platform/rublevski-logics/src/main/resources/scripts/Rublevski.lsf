//----------------------------------- Форма для остатков -------------------------------------------------//
FORM balanceItemDepartment 'Остатки по отделам'

    OBJECTS t=DATETIME FIXED PANEL
    PROPERTIES(t) OBJVALUE

    TREE treeStore a=STRING[3], tn=tradingNetwork, st=storeType, s=store
    PROPERTIES READONLY OBJVALUE(a), name(tn), name(st), name(s)
    FILTERS stringEqualsAll(a), inStoreTypeTradingNetwork (st, tn), inStoreTypeStore (st, s)

    OBJECTS ds=departmentStore
    PROPERTIES(ds) READONLY depName = name
    FILTERS inTradingNetworkStoreTypeStoreDepartment(tn, st, s, ds)
    ORDER BY depName

    DIALOG departmentStore OBJECT ds

    OBJECTS i=item
    PROPERTIES(i) nameAttributeItem

    PROPERTIES(i, ds, t) priceAccountLedgerDateTime, balanceAItemLedgerDateTime

    FILTERGROUP filters
        FILTER 'Товары с остатком' 'F10' balanceAItemLedgerDateTime(i, ds, t) DEFAULT
;

DESIGN balanceItemDepartment FROM DEFAULT {
    main{
        ADD treeStore.box BEFORE ds.box;
        POSITION treeStore.box TO THE LEFT ds.box;
        treeStore.tree {
            fillHorizontal = 0.3;
        }
    }
}
