setDataCollationSheet 'Создать номер' (collationSheet) = ACTION SET dataCollationSheet (collationSheet) <- nextDataCollationSheet();
setDataCollationSheet(collationSheet) <- TRUE ON ASSIGN collationSheet IS collationSheet;

  // todo : пока не работает, обязательно переделать.....


