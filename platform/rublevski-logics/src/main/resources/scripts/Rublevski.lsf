            tabbedPane = TRUE;
            NEW primary.box {
                title = 'Основные данные';
                fillVertical = 1.0;
                fillHorizontal = 1.0;
                NEW containerLeft {
                    childConstraints = TO THE BOTTOM;
                    ADD i.descriptionGroup {
                        fillVertical = 0.4;
                        NEW small.box {
