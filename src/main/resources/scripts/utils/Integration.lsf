MODULE Integration;

REQUIRE System;

showIDs 'Показывать ID объектов' = DATA BOOLEAN ();

META defineExternalizable (object, type)
    @defineExternalizable(object, type, );
END

META defineExternalizable (object, type, prefix)
    prefix###id###object 'Внешний код' = DATA type (###object) IN recognize INDEXED MINCHARWIDTH 10 PREFCHARWIDTH 15;
    prefix###object##Id (id) = GROUP AGGR object BY prefix###id###object (object);
END

META defineExternalizableAbstract (object, type)
    @defineExternalizableAbstract(object, type, );
END

META defineExternalizableAbstract (object, type, prefix)
    prefix###id###object 'Внешний код' = ABSTRACT type (###object) PERSISTENT INDEXED MINCHARWIDTH 10 PREFCHARWIDTH 15;
    prefix###object##Id (object) = GROUP AGGR object BY prefix###id###object (object);
END

EXTEND FORM options PROPERTIES() showIDs;
EXTEND DESIGN options {
    commons {
        ADD PROPERTY(showIDs());
    }
}
